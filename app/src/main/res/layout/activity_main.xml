<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@drawable/primary_bg"
    tools:context=".MainActivity">

    <!-- Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph"
        tools:layout="@layout/fragment_home" />

    <!-- Bottom Navigation Bar Container (Rounded Shape Requires Drawable) -->
    <LinearLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/rounded_edittext_background"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/home"
                android:contentDescription="home"
                app:tint="@color/vividBlue" />
            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:visibility="gone"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Insights / Chart (Activity) -->
        <LinearLayout
            android:id="@+id/nav_insights"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">
            <ImageView
                android:id="@+id/iv_insights"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_chart_line"
                android:contentDescription="Insights"
                app:tint="@android:color/darker_gray" />
            <TextView
                android:id="@+id/tv_insights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insights"
                android:visibility="gone"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Center FAB Button (Placeholder Space) -->
        <Space
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="0.8" />

        <!-- Analytics / Stats (Chart Bar) -->
        <LinearLayout
            android:id="@+id/nav_analytics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">
            <ImageView
                android:id="@+id/iv_analytics"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/chart"
                android:contentDescription="Analytics"
                app:tint="@android:color/darker_gray" />
            <TextView
                android:id="@+id/tv_analytics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analytics"
                android:visibility="gone"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Profile / Settings -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:contentDescription="Profile"
                android:src="@drawable/profile"
                app:tint="@android:color/darker_gray" />
            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:visibility="gone"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Floating Action Button (FAB) -->
    <ImageButton
        android:id="@+id/fab_center"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/bot"
        android:background="@drawable/recorg"
        android:scaleType="centerInside"
        android:elevation="12dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="AI Chat/Bot" />
</androidx.constraintlayout.widget.ConstraintLayout>
