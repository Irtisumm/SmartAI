<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainMenuActivity">

    <!-- Top Bar -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvUserProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tvUserInitials"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MB"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning!"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/cvUserProfile"
        app:layout_constraintTop_toTopOf="@id/cvUserProfile" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marshall Brown"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tvGreeting"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"/>

    <ImageView
        android:id="@+id/ivNotificationBell"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cvUserProfile"
        app:layout_constraintBottom_toBottomOf="@id/tvUserName"
        app:tint="@android:color/darker_gray" />

    <!-- Weather Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvWeather"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/weather_card_background"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ivWeatherIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/sun"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tvWeatherLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cyberjaya Weather"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@id/ivWeatherIcon"
                app:layout_constraintTop_toTopOf="@id/ivWeatherIcon" />

            <TextView
                android:id="@+id/tvWeatherDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunny • 29°C"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tvWeatherLocation"
                app:layout_constraintTop_toBottomOf="@id/tvWeatherLocation"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- AI Travel Companion Title -->
    <LinearLayout
        android:id="@+id/llAiTravelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvWeather">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your AI Travel"
            android:textSize="28sp"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Companion"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <!-- Main Cards Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvFullTravelPlan"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/teal"
        app:layout_constraintTop_toBottomOf="@id/llAiTravelTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_main_cards"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.45">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivFullTravelIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/google_docs"
                app:tint="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/ivFullTravelArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/right_up"
                app:tint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tvFullTravelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Travel
Plan"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvFullTravelSubtitle"/>
            <TextView
                android:id="@+id/tvFullTravelSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plan your trip step-by-step"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_main_cards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="206dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvQuickTips"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/light_purple"
        app:layout_constraintTop_toTopOf="@id/cvFullTravelPlan"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_main_cards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cvFamousPlaces"
        app:layout_constraintHeight_default="spread">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivQuickTipsIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/flash"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvQuickTipsTitle"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/right_up"
                app:tint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvQuickTipsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Tips"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFamousPlaces"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/pinkish_red"
        app:layout_constraintTop_toBottomOf="@id/cvQuickTips"
        app:layout_constraintStart_toStartOf="@id/cvQuickTips"
        app:layout_constraintEnd_toEndOf="@id/cvQuickTips"
        app:layout_constraintBottom_toBottomOf="@id/cvFullTravelPlan"
        app:layout_constraintHeight_default="spread">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivFamousPlacesIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/favorites"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvFamousPlacesTitle"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/right_up"
                app:tint="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvFamousPlacesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Famous
Places"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Explore Cyberjaya Section -->
    <TextView
        android:id="@+id/tvExploreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore Cyberjaya"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvFullTravelPlan" />

    <!-- Explore Cyberjaya categories (Using HorizontalScrollView with LinearLayout and TextViews) -->
    <HorizontalScrollView
        android:id="@+id/hsvCategories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tvExploreTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/llCategoryItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Restaurants" android:padding="8dp" android:background="#f0f0f0" android:layout_marginEnd="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Shopping" android:padding="8dp" android:background="#f0f0f0" android:layout_marginEnd="8dp"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Parks" android:padding="8dp" android:background="#f0f0f0" android:layout_marginEnd="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hotels" android:padding="8dp" android:background="#f0f0f0" android:layout_marginEnd="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Attractions" android:padding="8dp" android:background="#f0f0f0" android:layout_marginEnd="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Cafes" android:padding="8dp" android:background="#f0f0f0" android:layout_marginEnd="8dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ATMs" android:padding="8dp" android:background="#f0f0f0" android:layout_marginEnd="8dp"/>

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Emergency Card - Repositioned -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvEmergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/light_red_background"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hsvCategories"

        tools:layout_editor_absoluteY="602dp">
        <!-- Add content here if needed -->
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="184dp"
        android:layout_height="114dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsvCategories"
        app:layout_constraintVertical_bias="0.53">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/emergency"
            app:tint="@color/red_accent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Emergency"
            android:textColor="@color/red_accent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOS, Hospitals, Police"
            android:textColor="@color/red_accent"
            android:textSize="12sp" />
    </LinearLayout>



    <!-- Bottom Navigation -->
    <!-- You'll need to create menu/bottom_navigation_menu.xml -->
    <!-- For the central FAB, you might need a CoordinatorLayout and a FloatingActionButton -->

</androidx.constraintlayout.widget.ConstraintLayout>