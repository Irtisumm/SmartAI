<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_bg"
    tools:context=".ChangePasswordFragment">

    <!-- Background Gradient -->
    <View
        android:id="@+id/bgGradientPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBackPassword"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                android:src="@drawable/back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitlePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="@+id/btnBackPassword"
                app:layout_constraintBottom_toBottomOf="@+id/btnBackPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Subtitle/Instruction -->
            <TextView
                android:id="@+id/tvInstruction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="The new password must be different from the current password"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTitlePassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- New Password Label -->
            <TextView
                android:id="@+id/tvNewPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvInstruction"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- New Password Input -->
            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext_background"
                android:padding="16dp"
                android:textSize="14sp"
                android:drawableEnd="@drawable/ic_eye_slash"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvNewPasswordLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="Autofill" />

            <!-- Validation Check: Min Length -->
            <LinearLayout
                android:id="@+id/rowValidationLength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/etNewPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivCheckLength"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#00C566"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="There must be at least 8 characters"
                    android:textSize="14sp"
                    android:textColor="#00C566"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Validation Check: Unique Code -->
            <LinearLayout
                android:id="@+id/rowValidationUnique"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/rowValidationLength"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivCheckUnique"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="#00C566"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="There must be a unique code like @!#"
                    android:textSize="14sp"
                    android:textColor="#00C566"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Confirm Password Label -->
            <TextView
                android:id="@+id/tvConfirmPasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@+id/rowValidationUnique"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Confirm New Password Input -->
            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:background="@drawable/rounded_edittext_background"
                android:padding="16dp"
                android:textSize="14sp"
                android:drawableEnd="@drawable/ic_eye_slash"
                android:layout_marginTop="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvConfirmPasswordLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="Autofill" />

            <!-- Submit Button (Changed from Save Changes) -->
            <Button
                android:id="@+id/btnSubmitPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:backgroundTint="@color/vividBlue"
                android:textColor="@android:color/white"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp"
                android:layout_marginTop="64dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/etConfirmPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
