<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment as Start Destination -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.citypulseai.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_insightsFragment"
            app:destination="@id/insightsFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_chatBotFragment"
            app:destination="@id/chatBotFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_analyticsFragment"
            app:destination="@id/analyticsFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_homeFragment_to_profileMenuFragment"
            app:destination="@id/profileMenuFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <!-- Other Fragments (Insights, ChatBot, Analytics, Profile) -->
    <fragment
        android:id="@+id/insightsFragment"
        android:name="com.example.citypulseai.InsightsFragment"
        android:label="Insights"
        tools:layout="@layout/fragment_insights">
        <action
            android:id="@+id/action_insightsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/chatBotFragment"
        android:name="com.example.citypulseai.ChatBotFragment"
        android:label="AI Chatbot"
        tools:layout="@layout/fragment_chat_bot">
        <action
            android:id="@+id/action_chatBotFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.citypulseai.AnalyticsFragment"
        android:label="Analytics"
        tools:layout="@layout/fragment_analytics">
        <action
            android:id="@+id/action_analyticsFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileMenuFragment"
        android:name="com.example.citypulseai.ProfileMenuFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile_menu">
        <action
            android:id="@+id/action_profileMenuFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileMenuFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:popUpTo="@id/profileMenuFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileMenuFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment"
            app:popUpTo="@id/profileMenuFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileMenuFragment_to_changePinFragment"
            app:destination="@id/changePinFragment"
            app:popUpTo="@id/profileMenuFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_profileMenuFragment_to_notificationSettingsFragment"
            app:destination="@id/notificationSettingsFragment"
            app:popUpTo="@id/profileMenuFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.citypulseai.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_editProfileFragment_to_profileMenuFragment"
            app:destination="@id/profileMenuFragment"
            app:popUpTo="@id/profileMenuFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.citypulseai.ChangePasswordFragment"
        android:label="Change Password"
        tools:layout="@layout/fragment_change_password">
        <action
            android:id="@+id/action_changePasswordFragment_to_profileMenuFragment"
            app:destination="@id/profileMenuFragment"
            app:popUpTo="@id/profileMenuFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/changePinFragment"
        android:name="com.example.citypulseai.ChangePinFragment"
        android:label="Change PIN"
        tools:layout="@layout/fragment_change_pin">
        <action
            android:id="@+id/action_changePinFragment_to_profileMenuFragment"
            app:destination="@id/profileMenuFragment"
            app:popUpTo="@id/profileMenuFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/notificationSettingsFragment"
        android:name="com.example.citypulseai.NotificationSettingsFragment"
        android:label="Notification Settings"
        tools:layout="@layout/fragment_notification_settings">
        <action
            android:id="@+id/action_notificationSettingsFragment_to_profileMenuFragment"
            app:destination="@id/profileMenuFragment"
            app:popUpTo="@id/profileMenuFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>